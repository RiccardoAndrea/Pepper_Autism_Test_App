<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#E3F2FD"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="3dp"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:radius="12dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icona_registratore"
        android:contentDescription="Riproduci"
        android:padding="8dp"
        android:id="@+id/playButton"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Risposta - 12/03/2025"
        android:textSize="16sp"
        android:textColor="#000"
        android:paddingStart="12dp"
        android:id="@+id/nomeRegistrazione"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icona_delete"
        android:contentDescription="Elimina"
        android:id="@+id/deleteButton"/>
</LinearLayout>
