<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelezionaPazienteActivity">

    <!-- Titolo della pagina -->

    <!-- Descrizione del test -->

    <!-- Bottone per iniziare il test -->

    android:textColor="#FFFFFF"
    android:onClick="iniziaTest"
    app:layout_constraintTop_toBottomOf="@id/descrizioneTest"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_bias="0.5"/>

    <!-- Bottone per tornare alla schermata principale -->


    <Button

        android:id="@+id/selezionaPaziente"
        android:layout_width="213dp"
        android:layout_height="73dp"
        android:onClick="scegliPaziente"
        android:text="SELEZIONA PAZIENTE"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.453" />

    <ImageView

        android:id="@+id/avanti"
        android:layout_width="106dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:visibility="invisible"
        android:onClick="iniziaTest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/avanti" />

    <ImageView

        android:id="@+id/torna"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:onClick="tornaIndietro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/torna" />

</androidx.constraintlayout.widget.ConstraintLayout>

