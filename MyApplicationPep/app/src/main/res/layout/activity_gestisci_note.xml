<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical"><![CDATA[
    tools:context=".GestisciNoteActivity">

    ]]>

    <ImageView
        android:id="@+id/torna"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:onClick="tornaIndietro"
        android:src="@drawable/torna" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scegli un'opzione"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <!-- Pulsante per scrivere una nuova nota -->
    <Button
        android:id="@+id/btnScriviNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scrivi una Nota"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:onClick="goToScriviNota"/>


    <!-- Pulsante per visualizzare le note -->
    <Button
        android:id="@+id/btnVisualizzaNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizza le Note"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:onClick="goToVisulaizzaNota"/>
</LinearLayout>
